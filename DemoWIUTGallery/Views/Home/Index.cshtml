@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to WUIT Gallery</h1>
</div>

<div class="row">
@foreach (var item in Model)
{
   <div class="col-sm">
    <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="@FileLocation.RetriveFileFromFolder@item.PathFile" asp-append-version="true" alt="@item.Name" />
        <div class="card-body">
            <h5 class="card-title">@item.Name</h5>
            <a asp-controller="Galleries" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">View Details</a>
        </div>
    </div>
    </div> 
}
</div>
